<div class="top"><h1><%= t 'views.product.show.title' %><%= @product[:name] %> </h1>

<div><p><%= link_to I18n.t('views.back'), products_url %> | <%= link_to I18n.t('views.edit'), edit_product_path(@product) %> | <%= link_to I18n.t('views.destroy'), @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %></p></div></div>
<br>
<div class="info_box"><div id="name_box"><%= Product.human_attribute_name(:name) %><br><%= @product.name %></div> 
<br>
<div id="description_box"><%= Product.human_attribute_name(:description) %><br><%= @product.description %></div>
<br>
<div id="price_box"><%= Product.human_attribute_name(:price) %>$<%= @product.formatted_price %></div>
<br>
<div id="picture"><%= link_to image_tag(@product.url) %></div></div>

<% if current_user %>
	<div class="reviews"><h3>Reviews</h3>

	<p> Reviews for <%= @product.name %></p>

	<% @product.reviews.each do |review| %>
	  <p>
	  	<%= review.comment %>
	  	<br>
	  	<% if review.user != nil %>
	  	  <em> by <%= review.user.name %></em>
	  	  Added on: <%= review.created_at %>
	  	<% end %>
	  </p>
	<% end %>

<% end %>

<% if current_user %>

<h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
<% end %></div>