<div class="top"><h1><%= t 'views.product.edit.title' %></h1><div>
<div> 

<p>
	<%= link_to I18n.t('views.back'), @product %>
</p>

<%= form_for @product do |f| %>
	<p>
		<%= f.label "name" %><br>
		<%= f.text_field "name" %>
	</p>
	<p>
		<%= f.label "description" %><br>
		<%= f.text_field "description" %>
	</p>
	<p>
		<%= f.label "price_in_cents" %><br>
		<%= f.text_field "price_in_cents" %>
	<p>
		<%= f.submit  %>
	</p>
<% end %>
