<div><h1>Edit a Product</h1><div>
<div>

<p>
	<%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>
	<p>
		<%= f.label "name" %><br>
		<%= f.text_field "name" %>
	</p>
	<p>
		<%= f.label "description" %><br>
		<%= f.text_field "description" %>
	</p>
	<p>
		<%= f.label "price_in_cents" %><br>
		<%= f.text_field "price_in_cents" %>
	<p>
		<%= submit_tag "Save" %>
	</p>
<% end %>
