body {
	background-color: #7DD0B5;
	color: #AECB3C;
	font-family: 'Raleway', sans-serif;
	background: url(<%= asset_path 'jungle.jpg'%>); 
}

a {
	text-decoration: none;
}
 
a:link {
	color: #B6521F;
	text-shadow: 1px 1px black;
}

a:visited {
	color: #289C76;
	text-shadow: 1px 1px black;
}

.info_box {
	background-color: white;
	width: 1098px;
	border: 1px black solid;
	margin: 10px;
	padding: 10px;
}
 
.index_box {
	background-color: #1C3411;
	border: 1px black solid;
	display: inline-block;
	margin: 10px;
	padding: 10px;
	box-shadow: 10px 10px 5px #888888;
}

#name_box {
	border: 1px black solid;
	width: auto;
}

#description_box {
	background-color: white;
	border: 1px black solid;
	width: auto;
}

#price_box {
	border: 1px black solid;
	width: auto;
}

.name_price {
